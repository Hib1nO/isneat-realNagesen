h1.title.is-1.text-center.margintop1-5 試合設定
.SettingItemAre.fixed-grid.has-2-cols.field
    .level-right
        .buttons
            button#matchSettingsReload.button.is-primary 更新
    .grid
        .cell
            label.label 試合時間
            .MatchTimerSettingsAre
                .MatchTimerSettings
                    input#matchTimeMinuteInput.input(type="number", placeholder="Text input")
                .MatchTimerSettingsTitle 分
                .MatchTimerSettings
                    input#matchTimeSecondInput.input(type="number", placeholder="Text input")
                .MatchTimerSettingsTitle 秒

        .cell.is-row-start-2.margintop1-5
            label.label スピチャ自動開始
            .control#scAutoStartSettings
                label.radio
                    input#scAutoStartOn(type="radio", name="scAutoStart", value="1")
                    | 有効
                label.radio.marginl1
                    input#scAutoStartOff(type="radio", name="scAutoStart", value="0")
                    | 無効

        .cell.is-row-start-3.margintop1-5
