                table#giftListTable.table.is-fullwidth
                    thead.sticky
                        tr 
                            th ID
                            th 加算スコア
                            th ギフトエフェクト
                            th 変更 
                    tbody#giftListBody
                        //- rows are rendered by settingspanel

        .cell.is-row-start-9.margintop1-5.marginbottom10
            .buttons
                button#matchSettingsSave.button.is-link 保存
                button#matchSettingsCancel.button キャンセル

#new-gift-model.modal
    .modal-background
    .modal-card
        header.modal-card-head
            p.modal-card-title New GIFT
            button.delete(aria-label="close")
        section.modal-card-body
            .fixed-grid.has-4-cols
                .grid 
                    .cell.tbcenter-block
                        h5.cell.title.is-5.right-text ID:
                    .cell.is-col-span-3
                        input#NewgiftId.input.is-medium

                    .cell.tbcenter-block
                        h5.cell.title.is-5.right-text Score:
                    .cell.is-col-span-3
                        input#NewgiftScore.input.is-medium

                    .cell.tbcenter-block
                        h5.cell.title.is-5.right-text Gift Video:
                    .cell.is-col-span-3
                        .file.has-name
                            label.file-label
                                input#NewgiftVideoInput.file-input(type="file", name="video", accept="video/*")
                                span.file-cta
                                    span.file-icon
                                    i.fas.fa-upload
                                    span.file-label Choose a file…
                                span#NewgiftVideoFileName.file-name

                    .cell.is-col-start-2.is-row-start-4
                        figure.image.is-128x128
                            video#NewgiftVideoPreview(controls muted loop preload="metadata" src="")
                            | お使いのブラウザはvideoタグに対応していません
                    .cell.is-col-start-3.is-row-start-4.is-flex.is-align-items-center
                        button#NewgiftVideoDeletBtn.button ギフト動画削除

        footer.modal-card-foot
            .level.is-mobile(style="width: 100%")
                .level-left
                    .buttons
                        button#NewgiftAddBtn.button.is-info 追加
                        button#NewgiftCancelBtn.button.modalcancell キャンセル

